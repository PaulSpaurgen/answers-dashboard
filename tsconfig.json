{
    "compilerOptions": {
      "jsx": "react-jsx",
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      },
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "bundler",
      "allowImportingTsExtensions": true,
      "noEmit": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*", "src/types.d.ts"],
    "exclude": ["node_modules"]
  }